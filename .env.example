# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
DEBUG=false

# Scraper Configuration
MAX_CONCURRENT_WORKERS=10
REQUEST_TIMEOUT=30000
NAVIGATION_TIMEOUT=60000
PAGE_LOAD_TIMEOUT=30000

# Proxy Configuration (comma-separated list)
# Format: http://user:pass@host:port or http://host:port
PROXY_LIST=
PROXY_ROTATION_ENABLED=true

# Webshare Proxy Integration
# Enable to automatically fetch proxies from Webshare API
WEBSHARE_ENABLED=false
WEBSHARE_API_KEY=your_webshare_api_key_here
WEBSHARE_API_URL=https://proxy.webshare.io/api/v2/
PROXIES_PER_WORKER=5

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY=2

# Browser Configuration
HEADLESS=true
BROWSER_TYPE=chromium
